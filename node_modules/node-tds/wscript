def set_options(opt):
  opt.tool_options("compiler_cxx")

def configure(conf):
  conf.check_tool("compiler_cxx")
  conf.check_tool("node_addon")
  if not conf.check(lib="sybdb", libpath=['/mnt/d/code/node_modules/node-tds'],uselib_store="sybdb"):
    conf.fatal('Missing libsybdb.a');
  conf.env.append_value('LIBPATH_ODBC', './');

def build(bld):
  obj = bld.new_task_gen("cxx", "shlib", "node_addon")
  obj.cxxflags = ["-g", "-D_FILE_OFFSET_BITS=64", "-D_LARGEFILE_SOURCE", "-Wall"]
  obj.target = "node-tds"
  obj.source = "tds.cpp"
  obj.uselib = "sybdb"
