@import '../reset'
@import 'url'
a
    outline none
    text-decoration none
.clear
    clear both
    overflow hidden
    height 0
body
    font-size 12px
    font-family '宋体'
    color #8975AA
.container
    min-width 1000px
    background #1D1812 url($bg) center top no-repeat
    .content
        min-height 800px
        width 1000px
        margin 0 auto
        position relative
        .logo_link
            position absolute
            top 50px
            left 10px
            width 210px
            height 80px
        .nav
            position absolute
            width 600px
            height 25px
            left 427px
            top 12px
            overflow hidden
            a
                display block
                float left
                height 21px
                width 65px
                margin-right 16px
                &.fn_main
                    &:hover
                        background url($nav_tip) -2px 0px no-repeat
                &.fn_news
                    &:hover
                        background url($nav_tip) -83px 0px no-repeat
                &.fn_download
                    &:hover
                        background url($nav_tip) -164px 0px no-repeat
                &.fn_usercenter
                    &:hover
                        background url($nav_tip) -245px 0px no-repeat
                &.fn_gameinfo
                    &:hover
                        background url($nav_tip) -326px 0px no-repeat
                 &.fn_service
                    &:hover
                        background url($nav_tip) -407px 0px no-repeat
                 &.fn_bbs
                    &:hover
                        background url($nav_tip) -488px 0px no-repeat
        .fn_group
            position absolute
            top 296px
            left 9px
            width 203px
            height 300px
            a
                display block
                height 44px
                &.fn_download_btn
                    height 75px
                    margin-bottom 3px
                    &:hover
                        background url($btn) 0 0 no-repeat
                &.fn_reg_btn:hover
                    background url($btn) 0 -78px no-repeat
                &.fn_charge_btn:hover
                    background url($btn) 0 -122px no-repeat
                &.fn_active_btn:hover
                    background url($btn) 0 -210px no-repeat
                &.fn_get_gift_btn:hover
                    background url($btn) 0 -166px no-repeat
        .promotions
            position absolute
            top 600px
            left 14px
            a
                display block
                width 190px
                height 92px
                border 1px solid #4C278E
                margin-bottom 1px
                img
                    width 190px
                    height 92px
        .bread_path
            position absolute
            top 315px
            right 30px
            color #BCA2EC
            a
                color #BCA2EC
                &:hover
                    text-decoration underline
        .news_detail
            padding 360px 0 0 219px
            left 220px
            width 771px
            .news_class
                padding 0 50px 0 50px
                .border
                    background url($b_line) 0 bottom repeat-x
                    height 23px
                a
                    float left
                    padding 0 10px
                    height 22px
                    line-height 22px
                    margin-right 20px
                    color #ddd
                    font-weight bold
                    &:hover,&.selected
                        color #fff
                        background url($news_class) 0 0 repeat-x
            .news_list
                padding 30px 50px 20px 50px
                font-size 12px
                background-color #25192F
                min-height 300px
                _height 300px
                li
                    line-height 25px
                    height 25px
                    span
                        float right
                    a
                        float left
                        color #766695
                        max-width 630px
                        &:hover
                            color #C7C8DA
                    &.gap
                        border-bottom dashed 1px #766695
                        height 20px
                        margin-bottom 20px
            .paging
                text-align center
                background-color #25192F
                margin-bottom 20px
                padding 20px 0
                height 22px
                line-height 22px
                a
                    display inline-block
                    margin-right 5px
                    background-color #351E52
                    color #8975AA
                    border solid 1px #4D305C
                    height 20px
                    line-height 20px
                    padding 0 5px
                    &.current
                        color #FDFFFE
                        background-color #8140FF
                span
                    margin-right 5px
            #copyright
                padding-bottom 60px
                position relative
                margin-top 20px
                .copyright_content
                    background url($copyright_bg)
                    padding 10px 10px 10px 140px
                    line-height 20px
                .syyx_logo
                    width 117px
                    height 49px
                    position absolute
                    top 10px
                    left 15px
