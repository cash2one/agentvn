extends ../include/_frame

block p_variable
    -var p           = "p048"
    -var keywords    = "诺亚传说,网游,2012题材,网络游戏,人气,新世界,公平,免费,热门,2d,新游,排行榜"
    -var description = "全新2012题材人气巨作《诺亚传说》，科技与魔法完美融合的未来新世界，揭秘2012末日预言！唯美的未来世界，个性的异能职业，革新的趣味玩法，激爽的跨服PK，首创“微消费”公平模式，终极内测火爆进行中，7组万人新服等你开启！ "

block body
    .container
        .wrap
            .main
                #banner
                    img(width="855",height="643px",src="#{img_path}cyl.jpg",style="display:block")
                    img(width="855",height="643px",src="#{img_path}jws.jpg")
                    img(width="855",height="643px",src="#{img_path}gdj.jpg")
                    img(width="855",height="643px",src="#{img_path}qxs.jpg")
                    img(width="855",height="643px",src="#{img_path}ynz.jpg")
                    #swf
                    a.cyl(href="javascript:undefined")
                    a.jws(href="javascript:undefined")
                    a.gdj(href="javascript:undefined")
                    a.qxs(href="javascript:undefined")
                    a.ynz(href="javascript:undefined")
                a.logo(href="#{url_nycs}",target="_blank")
                a.mini(href="#{url_mini_client}")
                a#reg_1(href="javascript:undefined")
                .nav
                    a(href="http://events.syyx.com/nycs/index_xq.html",target="_blank",title="官网首页",hidefocus="true") 了解更多
                    |  |
                    a(href="#{url_reg_page}",target="_blank",title="注册账号",hidefocus="true") 注册
                    |  |
                    a(href="#{url_download_page}",target="_blank",title="下载游戏",hidefocus="true") 下载
                #video
                a#reg_2(href="javascript:undefined")
                include ../include/copyright
            #reg_scroll
                a#reg_but(href="javascript:undefined")
                #reg_box
                    .reg_panel
                        .reg
                            table.reg_form(border="0",cellpadding="0",cellspacing="0")
                                tr
                                    td.reg_form_item_name 账&nbsp;&nbsp;&nbsp;&nbsp;号：
                                    td.reg_form_item_input
                                        input#txtUserAccount(type="text",maxlength="16")
                                    td
                                        #txtUserAccountTip
                                tr
                                    td.reg_form_item_name 密&nbsp;&nbsp;&nbsp;&nbsp;码：
                                    td.reg_form_item_input
                                        input#txtPasswords(type='password',maxlength="16")
                                        input#txtPasswordsVal.disnone(type="text")
                                    td
                                        #txtPasswordsTip
                                tr
                                    td.reg_form_item_name 重复密码：
                                    td.reg_form_item_input
                                        input#txtConfirm(type="password")
                                        input#txtConfirmVal.disnone(type="text")
                                    td
                                        #txtConfirmTip
                                tr
                                    td.reg_form_item_name 真实姓名：
                                    td.reg_form_item_input
                                        input#txtTrueName(type='text',maxlength="20")
                                    td
                                        #txtTrueNameTip
                                tr
                                    td.reg_form_item_name 身&nbsp;份&nbsp;证：
                                    td.reg_form_item_input
                                        input#txtCardID(type="text",maxlength="18")
                                    td
                                        #txtCardIDTip
                                tr
                                    td.reg_form_item_name 验&nbsp;证&nbsp;码：
                                    td.reg_form_item_input.validate_num_input
                                        input#txtValidate(type='text',maxlength='20')
                                        img#validateimg.disnone(src='',alt='点击刷新验证码')
                                    td
                                        #txtValidateVal
                            .agreement
                                input#chk_XieYi(type="checkbox",checked)
                                | 同意
                                a(href='http://user.syyx.com/policy/userpolicy.aspx',target="_blank",hidefocus="true")
                                    《使用协议及隐私协议》
                            .reg_submit
                                a#reg_button(href='#',hidefocus="true")
                                span#regProcessTip
                        #reg_step2
                            .success 注册成功!
                            p 恭喜您获得
                                span#card_type 公测战放礼包
                            |您的账号：
                            input#reg_account(type="text")
                            br 
                            |激活码为：
                            input#active_code(type="text")
                            a#active_link(href='#',hidefocus="true")
                        #reg_step3
                            .success 注册成功!
                            p 恭喜您注册成功，今天的礼包卡已发完。
                            p
                        #reg_step4
                            .success 激活成功!
                            .active_info 立即下载客户端，畅享战放礼包福利
                        #reg_step5
                            .fail 激活失败!
                            p
                                span 激活信息有误，您可以在客户端下载期间，返回上一页重新激活礼包
                            .download
                                a(href="http://download.17173.com/11205/10/63486/9/",hidefocus="true",class="mini_download",target="_blank")
                                a(href="http://download.17173.com/11205/10/63486/13/",hidefocus="true",class="full_download",target="_blank")
                            .back_bg
                                a#back(href="javascript:undefined")
                        .download
                            a(href="http://download.17173.com/11205/10/63486/9/",hidefocus="true",class="mini_download",target="_blank")
                            a(href="http://download.17173.com/11205/10/63486/13/",hidefocus="true",class="full_download",target="_blank")
                        .download_tip 特权礼包可在游戏内礼包大使处直接领取
                    span#close