//-竖版有下载----------------------------------------------------
.reg_panel
    .reg
        table.reg_form(border="0",cellpadding="0",cellspacing="0")
            tr
                td.reg_form_item_name 账&nbsp;&nbsp;&nbsp;&nbsp;号：
                td.reg_form_item_input
                    input#txtUserAccount(type="text",maxlength="16")
                td
                    #txtUserAccountTip
            tr
                td.reg_form_item_name 密&nbsp;&nbsp;&nbsp;&nbsp;码：
                td.reg_form_item_input
                    input#txtPasswords(type='password',maxlength="16")
                    input#txtPasswordsVal.disnone(type="text")
                td
                    #txtPasswordsTip
            tr
                td.reg_form_item_name 重复密码：
                td.reg_form_item_input
                    input#txtConfirm(type="password")
                    input#txtConfirmVal.disnone(type="text")
                td
                    #txtConfirmTip
            tr
                td.reg_form_item_name 真实姓名：
                td.reg_form_item_input
                    input#txtTrueName(type='text',maxlength="20")
                td
                    #txtTrueNameTip
            tr
                td.reg_form_item_name 身&nbsp;份&nbsp;证：
                td.reg_form_item_input
                    input#txtCardID(type="text",maxlength="18")
                td
                    #txtCardIDTip
            tr
                td.reg_form_item_name 验&nbsp;证&nbsp;码：
                td.reg_form_item_input.validate_num_input
                    input#txtValidate(type='text',maxlength='20')
                    img#validateimg.disnone(src='',alt='点击刷新验证码')
                td
                    #txtValidateVal
        .agreement
            input#chk_XieYi(type="checkbox",checked)
            | 同意
            a(href='http://user.syyx.com/policy/userpolicy.aspx',target="_blank",hidefocus="true")
                《使用协议及隐私协议》
        .reg_submit
            a#reg_button(href='#',hidefocus="true")
            span#regProcessTip
    #reg_step2
        .active
            div 恭喜您，获得礼包激活码。
            div 请进入游戏找"礼包大使"领取。
            div 您的账号：
                span#reg_account
            div 激活码为：
                span#active_code
            a#active_link(href='#',hidefocus="true")
    #reg_step3
        .no_card
            div 恭喜您，注册成功!
            div 今天的礼包卡已发放完毕。
            div 您的账号：
                span#reg_account3
    .download
        a(href="#{url_mini_client}",hidefocus="true",class="mini_download")
        a(href="#{url_full_client}",hidefocus="true",class="full_download")