extends ../include/_frame

//-模板变量----------------------------------------------------------------------------
block p_variable
    -var p      = "p005"
    -var p_css  = ["http://s.syyx.com/nycs/plugin/default_page_plugin/jquery-ui-1.8.13.custom.css","http://s.syyx.com/nycs/plugin/light-box/jquery.lightbox-0.5.css"]
    
//-模板内容----------------------------------------------------------------------------
block body
    .reg_iframe
        .reg_outer
            .reg
                table.reg_form
                    tr
                        td.reg_form_item_name 账号
                        td.reg_form_item_input
                            input#txtUserAccount(type="text",maxlength="16",)
                        td
                            #txtUserAccountTip
                    tr
                        td.reg_form_item_name 密码
                        td.reg_form_item_input
                            input#txtPasswords(type='password',maxlength="16")
                            input#txtPasswordsVal.disnone(type="text")
                        td
                            #txtPasswordsTip
                    tr
                        td.reg_form_item_name 重复密码
                        td.reg_form_item_input
                            input#txtConfirm(type="password")
                            input#txtConfirmVal.disnone(type="text")
                        td
                            #txtConfirmTip
                    tr
                        td.reg_form_item_name 真实姓名
                        td.reg_form_item_input
                            input#txtTrueName(type='text',maxlength="20")
                        td
                            #txtTrueNameTip
                    tr
                        td.reg_form_item_name 身份证
                        td.reg_form_item_input
                            input#txtCardID(type="text",maxlength="18")
                        td
                            #txtCardIDTip
                    tr
                        td.reg_form_item_name 验证码
                        td.reg_form_item_input.validate_num_input
                            input#txtValidate(type='text',maxlength='20')
                            img#validateimg.disnone(src='',alt='点击刷新验证码')
                        td
                            #txtValidateVal
                .agreement
                    input#chk_XieYi(type="checkbox",checked)
                    | 同意
                    a(href='http://user.syyx.com/policy/userpolicy.aspx',target="_blank")
                        《使用协议及隐私协议》
                .reg_submit
                    a#reg_button(href="#",hidefocus="")
                        span.hide 注册账号
                    span#regProcessTip
            #reg_step2
                #reg_account_outer
                    | 恭喜您，获得礼包激活码，
                    br
                    | 请进入游戏找"礼包大使"领取。
                    br
                    | 您的账号：
                    span#reg_account
                    br
                    | 激活码为：
                    span#active_code
                a#active_link(href='#')
                    span.hide 立即激活
            #reg_step3
                .reg_success_no_card
                    | 恭喜您，注册成功!
                    br
                    | 今天的礼包卡已发放完毕。
                    br
                    | 您的账号：
                    span#reg_account3