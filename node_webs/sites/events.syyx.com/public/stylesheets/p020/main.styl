                background-position -145px -260px
        .download
            height 50px
            width 266px
            margin 0 auto
            background url($btn2) no-repeat -301px -137px
            position relative
            a
                position relative
                top 60px
            .mini_download
                height 30px
                width 127px
                position absolute
                left 0
                background url($btn2) no-repeat -12px -158px
                &:hover
                    background-position:-12px -188px
            .full_download
                height 30px
                width 127px
                position absolute
                right 0
                background url($btn2) no-repeat -155px -158px
                &:hover
                    background-position:-155px -188px
        .reg_submit
            height 55px
            position relative
        #reg_button
            width 128px
            height 32px
            position absolute
            left 51px
            top 7px
            background url($btn2) no-repeat -11px -227px
            &:hover
                background-position -11px -261px
        .success
            height 50px
            padding-left 50px
            line-height 50px
            background url($success) no-repeat left center
            color rgb(255,191,0)
        .fail
            height 50px
            padding-left 50px
            line-height 50px
            background url($fail) no-repeat left center
            color rgb(255,191,0)
            margin-left 50px
        #back
            text-decoration underline
            cursor pointer
            margin 20px 0 0 100px
        .download_tip
            text-align center
            padding-top 90px
            color rgb(7, 218, 239)
    #close
        width 22px
        height 22px
        cursor pointer
        position absolute
        top 0
        right 0
