        left -212px
        background url($reg_head) #11406C no-repeat
        width 282px
        height 360px
        padding-top 100px
        border 1px solid #0876B3
        color rgb(189,241,255)
        overflow hidden
        a
            color #00E5E2
            &:hover
                color #fff
        .reg
            padding 0 20px 0 25px
        table
            height 162px
            td
                height 27px
                width 20px
            input
                background #85bbe5
