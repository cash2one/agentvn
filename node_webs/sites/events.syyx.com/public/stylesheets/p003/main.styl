body
    margin 0
    font 12px/16px '宋体'
    color #6b8494
    background  #001c4e
    color #b4eeff
#bg
    display none
a
    color #6986c7
    text-decoration none
    outline none
    &:hover
        color #87adff
img
    border none
.main
    background url($main) no-repeat center 436px
    height 1080px
    min-width 980px
.main-banner
    height 436px
    background url($bg) no-repeat center top
.main-head
    width 980px
    margin 0 auto
    height 436px
    position relative
.main-head-top_nav
    width 660px
    text-align right
    line-height 36px
    color #6986c7
    height 36px
.main-head-logo
    margin-left 180px
    width 186px
    height 75px
    display block
.main-head-mini_down
    left 162px
    width 184px
    height 38px
    top 380px
    display block
    position absolute
    background url($bt_hover) no-repeat -13px -50px
    &:hover
        background-position -14px -11px
#flash
    width 388px
    height 219px
    position absolute
    left 24px
    top 3px
    background #000  
.main-head-go_home
    width 127px
    height 34px
    left 762px
    top 398px
    position absolute
.middle
    position relative
    width 980px
    margin 0 auto
    height 475px
#img_focus
    height 396px
    top 37px
    left 3px
    width 680px
    position absolute
    background url($loading) center 200px no-repeat
.reg_panel
    top 97px
    left 445px
    width 500px
    height 116px
    position relative
    table
        td
            height 27px
            width 30px
        input
            background #85bbe5
            border 1px solid #009cff
            height 18px
            color #002c7a
            line-height 18px
            width 145px
        .focus_in_inut
            background #cce9ff
    .agreement
        height 21px
        float left
        a
            text-decoration underline
    .reg_form_item_name
        width 60px
    .reg_form_item_input
        width 150px
    .validate_num_input
        height 30px
        vertical-align top
        padding-top 3px
    #txtValidate
        width 50px
    #validateimg
        width 90px
        margin-left 5px
        height 27px
        vertical-align top
        cursor pointer
    #reg_step2,#reg_step3
        line-height 25px
        display none
        text-align center
        span
            color #FFFF78
            margin-right 10px
            font-size 14px
    .link        
        margin 20px auto 10px
        width 290px
        height 30px
        #active_link
            background url($bt_hover) no-repeat -339px -22px
            display block
            width 128px
            height 27px
            float left
            &:hover
                background-position -339px -50px
        .mini
            background url($bt_hover) no-repeat -468px -22px
            display block
            width 139px
            height 27px
            float right
            &:hover
                background-position -468px -50px
    .download
        height 30px
        width 266px
        position absolute
        top 295px
        left 16px
        .mini_download
            height 100%
            width 127px
            display block
            float left
            &:hover
                background url($bt_hover) no-repeat -328px -11px
        .full_download
            height 100%
            width 127px
            display block
            float right
            &:hover
                background url($bt_hover) no-repeat -456px -11px
    .reg_submit
        float right
        position absolute
        top 85px
        left 300px
        width 160px
        height 27px
    #regProcessTip
        width 20px
        height 20px
        float right
    #reg_button
        width 128px
        height 27px
        position absolute
        background url($bt_hover) no-repeat -211px -22px
        &:hover
            background-position -211px -50px
#img_scroll
    position absolute
    top 277px
    left:37px
    height 130px
    a
        margin-right 12px
        display block
        display inline-block
        background url($loading) center no-repeat
        width 216px
        height 130px
        float left
        border 1px solid #00469d
    img
        display none
.foot
    width 980px
    margin 0 auto
    padding-top 10px
    color #3c69a1    
    .copy_right
        width 980px
        text-align center
        position relative
        .feet_txt
            text-align left
            margin 10px 0 0 380px
        .feet_logo
            position absolute
            width 140px
            height 60px
            left 225px
            top 30px
.check_result_wrong
    background url($right_wrong) no-repeat 0 -32px
    height 100%
    width 16px
.check_result_right 
    background: url($right_wrong) no-repeat 0 4px
    height: 25px;
    width: 16px;

.check_result_loading 
    background url($loader) no-repeat 0 4px
    height 25px
    width 16px

