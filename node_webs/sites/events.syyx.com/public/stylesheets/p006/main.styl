            background-position -24px -43px
    .success
        height 50px
        padding-left 50px
        line-height 50px
        background url($success) no-repeat left center
        color rgb(255,191,0)
    .fail
        height 50px
        padding-left 50px
        line-height 50px
        background url($fail) no-repeat left center
        color rgb(255,191,0)
        margin-left 50px
