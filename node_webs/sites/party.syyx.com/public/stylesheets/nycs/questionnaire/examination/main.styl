$path           = "http://r.syyx.com/party/nycs/questionnaire/"
$head           = $path"head.jpg"
$loading        = $path"loading.gif"
$content_title  = $path"content_title.jpg"
$btn            = $path"btn.jpg"
$bar1           = $path"bar1.jpg"
$bar2           = $path"bar2.jpg"
$bar3           = $path"bar3.jpg"
$score_bg       = $path"score_bg.jpg"
$footer_bg      = $path"footer_bg.jpg"

body
    margin 0
    font-size 12px
a
    color #1b7ee7
    text-decoration none
    outline none
    &:hover
        color #000
#main
    width 980px
    margin 0 auto
.head
    height 125px
    background url($head) no-repeat
    position relative
    .login
        display none
        text-align right
        padding-top 40px
    #user
        padding-right 10px
    #logout
        display none
    .nav
        text-align right
        font-size 14px
        position absolute
        top 93px
        width 900px
        left 0
        color #fff
        a
            color #fff
            &:hover
                color #fef22d
#banner
    width 980px
    text-align center
    padding-top 15px
#ex_box
    background url($content_title) no-repeat 0 -1px #F6FBFF
    padding-top 80px
    border 1px solid #A4CEFF
    margin-top 15px
    position relative
.ex_main
    min-height 300px
    overflow hidden
    zoom 1
    width 100%
#loading
    line-height 300px
    text-align center
    height 300px
#welcome
    height 260px
    text-align center
    font-weight 700
    font-size 14px
    color #0D83C3
    line-height 30px
    padding-top 20px
    display none
    position absolute
    width 100%
    left 0
    p
        margin 30px 60px
    span
        color #FF8552
        padding 0 5px
    .dis,.dis:hover
        background url($btn) no-repeat
#thanks
    height 260px
    text-align center
    font-weight 700
    font-size 14px
    color #0D83C3
    line-height 30px
    padding-top 40px
    display none
#ex_start
    text-align center
    line-height 100px
    margin 20px auto
    width 214px
    height 65px
    background url($btn) no-repeat -430px 0
    display block
    &:hover
        background-position -216px 0
#ex_content
    float left
    display inline-block
    font-size 14px
    line-height 25px
    color #555
    min-height 200px
    margin 0 40px
    _height 200px
    p
        margin 5px 0
    .in_text
        border 1px solid #A8D1FD
        background #F6FBFF
    td
        padding 1px 10px
.ex_check
    display none
    clear both
    padding 20px 0
    width 100%
    .wait,.wait:hover
        color #666
        background-position -202px -98px
        cursor default
.ex_next
    display block
    width 95px
    text-align center
    height 27px
    line-height 27px
    background url($btn) no-repeat -7px -98px
    color #fff
    margin 0 auto
    &:hover
        background-position -104px -98px
        color #FFF701
.speed_main
    background #D6EDFF
    height 36px
    position relative
    display none
    clear both
.ex_speed
    background #ccc
    width 570px
    height 10px
    padding 3px
    background url($bar1) no-repeat
    margin 0 auto    
    position relative
    top 10px
#speed_bar
    height 10px
    width 0
    overflow hidden
    background url($bar3) repeat-x
    .left
        width 3px
        height 10px
        background url($bar2) left top
        float left
    .right
        width 3px
        height 10px
        background url($bar2) right top
        float right
.speed_info
    line-height 20px
    position absolute
    top 8px
    left 130px
    width 100px
    color #0B82C4
#percentage
    color #FF8552
    position absolute
    top 11px
    font-weight 700
    left 50%
    width 50px
    margin-left -25px
    text-align center
.speed_num
    color #41ac12
    position absolute
    top 11px
    right 30px
.title
    font-weight 700
    color #0C83C7
.score_box
    position relative
    height 22px
    width 251px
.score_bg
    background red
    height 20px
    width 0
    background url($score_bg) repeat-x
.score_bar
    border 1px solid #ccc
    border-right none
    height 18px
    line-height 18px
    overflow hidden
    zoom 1
    position absolute
    top 0
    left 0
    width 250px
    span
        width 49px
        display block
        border-right 1px solid #ccc
        float left
        text-align center
        cursor pointer
.score_num
    color #FF854F
    font-weight 700
.score_left,.score_center,.score_right
    color #42AD11
    font-size 12px
    width 33%
    float left
.score_center
    text-align center
    color orange
.score_right
    text-align right
    color red
.td_right
    text-align right
textarea
    width 580px
    height 128px
    font-size 12px
.font_len
    font-size 12px
.other_12
    font-size 12px
.in_area
    width 300px
    height auto
.copy_right
    width 780px
    padding 54px 0
    background url($footer_bg) repeat-x 0 15px
    position relative
    padding-left 200px
    line-height 23px
    color #88929e
    p
        text-align center
        position absolute
        top 30px
        left 0
        width 980px
        margin 0
    .feet_logo
        width 114px
        height 43px        
        position absolute
        background url($btn) no-repeat -525px -102px
        left 60px
        top 55px
