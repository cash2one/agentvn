$path               = 'http://r.syyx.com/party/nycs/acrosspk/'
$bg                 = $path'bg.jpg'
$main               = $path'main.jpg'
$btn                = $path'btn.jpg'
$arrow              = $path'arrow.jpg'
$content            = $path'content.png'
$nodata             = $path'nodata.jpg'
$bg_body            = $path'bg_body.jpg'

body
    font-size 12px
    margin 0
    color #134aa5
    background #000431
    font-family "宋体"
a
    color #c6b9b1
    text-decoration none
    outline none

a:hover
    color #fff
img 
    border none
.head
    height 660px
    background url($bg) no-repeat top center
    z-index 10
    position relative
.container
    min-width 980px

.w_980
    position relative
    width 980px
    height 100%
    margin 0 auto
.logo
    position absolute
    left 24px
    width 168px
    height 78px
    text-indent -9999cm
.nav
    width 750px
    text-align right
    color #c6b9b1
    line-height 30px
.content_img
    background url($bg_body) no-repeat center top
.content_table
    background url($content) repeat-y center top
    width 100%
.main
    height 417px
    background url($main) no-repeat center top
    position relative  
    width 100%

.content
    left 126px
    top 502px
    position absolute
    font-weight 700
    font-size 14px
    color #8bdefc
    text-indent 32px
    line-height 22px
    width 672px
.more
    position absolute
    left 126px
    top 560px 
    width 672px  
    height 20px
    text-decoration: inline
    padding-left 35px
    background url($arrow) no-repeat
.link_more
    position absolute
    color #047fff 
    font-size 14px
    text-decoration: underline 

#tab_match
    width 700px
    height 103px
    top 382px
    position absolute
    left 39px
    a
        width 326px
        height 103px
        background url($btn) no-repeat 9999cm
        display inline-block
        margin-right 7px
        cursor pointer
    .tab_0
        background-position 0 -104px
    .tab_1
        background-position 0 -312px
.view
    top 620px
    position absolute
    left 120px
    z-index 10
#tab_charts   
    top 3px 
    left 2px
    width 260px
    position absolute
    span
        width 121px
        display inline-block
        float left
        height 34px
        cursor pointer        
        background url($btn) no-repeat 0 -424px
        margin-left 2px
    .check_0
        background-position -122px -424px
    .sd2
        background-position 0px -459px
    .check_1
        background-position -122px -459px
#view_time
    position absolute
    top 12px
    left 560px 
    width 110px
    color #8c6fa7
    font-size 14px
    line-height 22px
    span
        cursor pointer
        display block
#time_box
    position absolute
    top 23px
    left -6px 
    width 110px
    color #8c6fa7
    font-size 14px
    background #19164b
    z-index 10
    border 1px solid #080006
    display none
    a
        margin 0
        padding 2px 0 0 6px
        border 1px solid #312879
        border-bottom 0
        line-height 22px
        height 22px
        display block
        cursor pointer
        &:hover
            background #2e297e
table
    width 666px
    height 158px
    border 1px solid #1a47ae
    font-size 14px
    text-align center
    border-collapse collapse
    color #8bdefc
    background #0e145e
.t2
    margin-top 10px
tr
    border 1px solid #1a47ae
td,th
    border 1px solid #1a47ae
#tbl_show
    min-height 400px
    *height 400px
    width 980px
    margin 0 auto
.tbl_1
    width 666px
    margin-left 123px
    display none
.tbl_2
    width 666px
    margin-left 123px
    line-height 36px
    display none
.tbl_3
    width 664px
    margin-left 124px
    height 286px
    background url($nodata) no-repeat
    border 1px solid #1A47AE
    display none
.t_title
    font-weight 900
.gold
    color gold
    line-height 25px
.img_block
    position absolute
    left 126px 
    top 90px 
.img 
    margin-left 8px
.share
    position absolute
    right 160px
    float right
    top 45px
    width 160px
    height 18px
    a
        display inline-block       
        margin-right 11px
        width 18px
        height 18px
.copy_right
    width 980px
    text-align center
    position absolute
    top 300px
    .feet_txt
        text-align left
        margin 10px 0 0 360px
        line-height 20px
    .feet_logo
        position absolute
        width 140px
        height 60px        
        top 34px
        left 180px
.disnone
    display none