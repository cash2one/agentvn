opacity(n)
    opacity n
    if support-for-ie
        filter unquote('alpha(opacity=' + round(n * 100) + ')')

#img_cut_box
    width 300px
    height 300px
    font-size 12px
    background #fff
    margin 100px auto
    position relative
    overflow hidden
    border 1px solid #ccc
    color #000
#img_cut_view
    width 300px
    height 300px
    display none
    text-align center
    overflow hidden
    span
        line-height 300px
    img
        opacity 0
        position absolute
        left 50%
        top 50%
        display none
#img_cut_action
    width 100%
    height 100%
    text-align center
    position absolute
    display none
    top 0
    left 0
    #img_cut_case
        width 100px
        height 100px
        border 1px solid #00e4ff
        position absolute
        left 99px
        top 99px        
        .img_cut_case_
            width 10px
            height 10px
            border 2px solid #f60
            position absolute
        .img_cut_case_tl
            top -1px
            left -1px
            border-width 2px 0 0 2px
        .img_cut_case_tr
            top -1px
            right -1px
            border-width 2px 2px 0 0
        .img_cut_case_br
            right -1px
            bottom -1px
            border-width 0 2px 2px 0
        .img_cut_case_bl
            left -1px
            bottom -1px
            border-width 0 0 2px 2px 
    #img_cut_drug
        left 0
        top 0
        position absolute
        width 100%
        height 100%
        cursor move
#img_cut_upload
    position absolute
    top 100px
    text-align center
    width 100%
#img_cut_zoom
    height 20px
    line-height 20px
    width 100%
    position absolute
    top 280px
    left 0
    background url("http://r.syyx.com/plugin/img_cut_zoom.png") no-repeat
    opacity .8
    display none
    width 132px
    span
        cursor pointer
        width 28px
        display block
        height 20px
        float left
        color #fff
    .img_cut_zoom_
        width 38px
        float left
        height 20px
        color #fff
        text-align center
        cursor pointer
        &:hover
            color #f60
    #img_cut_zoom_num:hover
        color #000
    #img_cut_zoom_small
        left 26px
    #small
        margin-left 1px